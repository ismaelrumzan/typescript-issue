{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["server-middleware/**"]
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1.ts"
    },
    {
      "src": "/api/newsletter/(.*)",
      "dest": "api/newsletter/$1.ts"
    },
    {
      "src": "/api",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "$1"
    }
  ]
}
